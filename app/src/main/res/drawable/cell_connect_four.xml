<?xml version="1.0" encoding="utf-8"?>

    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Background: Blue-Greenish -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#2BBD7E"/> <!-- Deep Blue -->
                <corners android:radius="4dp"/> <!-- Rounded corners -->
            </shape>
        </item>

        <!-- White Circle in the Center -->
        <item>
            <shape android:shape="oval">
                <solid android:color="#DEF8DC"/> <!-- White circle -->
            </shape>
            <gravity android:gravity="center"/>
        </item>

    </layer-list>
